@page "/"
@using BingoLingo.Shared
@inject HttpClient Http

<PageTitle>Translate!</PageTitle>

@if (_translation == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div style="text-align: center">
        <h3>Translate the following:</h3>
        <p>@_translation.original</p>
        <input @bind="_submittedTranslation" autofocus="autofocus"/>
        <button @onclick="@Submit" type="submit" class="btn btn-primary">Submit</button>
        <p style="font-size:48px" hidden="@_hideSuccess">&#x2705;</p>
        <p style="font-size:48px" hidden="@_hideFailure">&#x274C;</p>
    </div>
}

@code {
    private Translation? _translation;
    private string? _submittedTranslation;
    private bool _hideSuccess = true;
    private bool _hideFailure = true;

    protected override async Task OnInitializedAsync()
    {
        _translation = await Http.GetFromJsonAsync<Translation>("/randomTranslation");
    }

    private void Submit()
    {
        _hideFailure = _hideSuccess = true;
        if (_translation?.translation != _submittedTranslation)
        {
            _hideFailure = false;
        }
        else
        {
            _hideSuccess = false;
        }
    }
}
